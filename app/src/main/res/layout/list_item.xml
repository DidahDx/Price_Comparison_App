<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:paddingTop="14dp"
    android:paddingBottom="12dp"
    android:id="@+id/list_product"
    android:background="@drawable/item_background"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp">

    <!-- Image to show the product image -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_margin="4dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@drawable/ic_shopping_cart"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1">


                <!--  website logo image -->
                <ImageView
                    android:id="@+id/website_logo"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@id/website_name"

                    />

                <!--  website name  -->
                <TextView
                    android:id="@+id/website_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:textSize="12sp"
                    tools:text="website Name" />


        </LinearLayout>


        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/textColorEarthquakeLocation"
            android:textSize="16sp"
            android:text="Long placeholder for the  descrption of the product should not be too long"
            tools:text="Long placeholder for the  descrption of the product should not be too long " />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:textSize="12sp"
                    android:text="$435678"
                    tools:text="$12000" />

                <TextView
                    android:id="@+id/prevoius_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:textSize="12sp"
                    android:text="3000"
                    tools:text="3000"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/magnitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_toRightOf="@id/prices"
                tools:text="8.9" />

        </RelativeLayout>



    </LinearLayout>


    <!--layout-->
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/save"
            android:layout_alignParentEnd="true" />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
    android:orientation="vertical">


</LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/share"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/share"/>

    </RelativeLayout>


</LinearLayout>